int LedPin1 = 9;
int LedPin2 = 8;
int LedPin3 = 10;
void setup() {
  Serial.begin(9600);
  pinMode(LedPin1, OUTPUT);
  pinMode(LedPin2, OUTPUT);
  pinMode(LedPin3, OUTPUT);  

}

void loop() {
  int sensorSaw = analogRead(A0);
  int sensorTempo = analogRead(A1);
  int sensorLoung = analogRead(A2);
  
        Serial.println(sensorSaw);
        Serial.println(sensorTempo);
        
  int Pitch = map(sensorSaw, 32, 40, 50, 60);       //FREQUENCY IN HERTZ
  int Tempo = map(sensorTempo, 10, 100, 500, 1000); //DELAY LOOP 
  int Loung = map(sensorLoung, 10, 100, 500, 1000); //DURATION IN MILISECONDS
  
        tone(7, Pitch, Loung);
        delay(Tempo); 
  //LED
  digitalWrite(LedPin1, LOW);  
  delay(Tempo); 
  digitalWrite(LedPin1, HIGH);
  delay(Tempo);

  digitalWrite(LedPin2, HIGH);
  delay(Tempo); 
  digitalWrite(LedPin2, LOW);
    delay(Tempo);
/// LOUNG LED INDICADOR
  digitalWrite(LedPin3, LOW);  
  delay(Loung); 
  digitalWrite(LedPin3, HIGH);
  delay(Loung);
}
